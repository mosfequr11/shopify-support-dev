<div class="lookbook">
  <h2>lookbook</h2>
</div>
{% schema %}
{
  "name": "Lookbook",
  "blocks": [{ "type": "_jubilee-lookbook-item" }],
  "settings": [
    {
      "type": "header",
      "content": "Carousel settings"
    },
    {
      "type": "range",
      "id": "items_per_row_desktop",
      "label": "Items per row on desktop",
      "min": 1,
      "max": 6,
      "step": 0.5,
      "default": 2
    },
    {
      "type": "select",
      "id": "column_gap",
      "label": "Column gap",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "medium"
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "label": "Show navigation",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_pagination",
      "label": "Show pagination",
      "default": false,
      "info": "Pagination will automatically show on mobile if you display the number of items on mobile as 1 or 2"
    },
    {
      "type": "header",
      "content": "Mobile settings"
    },
    {
      "type": "range",
      "id": "items_per_row_mobile",
      "label": "Items per row on mobile",
      "min": 1,
      "max": 2,
      "step": 0.1,
      "default": 1.5
    }
  ],
  "presets": [
    {
      "name": "Lookbook",
      "blocks": [
        {
          "type": "_jubilee-lookbook-item"
        },
        {
          "type": "_jubilee-lookbook-item"
        },
        {
          "type": "_jubilee-lookbook-item"
        }
      ]
    }
  ]
}
{% endschema %}
