{% comment %} <link rel="stylesheet" href="{{ 'info-list.css' | asset_url }}" media="print" onload="this.media='all'"> {% endcomment %}
{% comment %} <noscript>{{ 'info-list.css' | asset_url | stylesheet_tag }}</noscript> {% endcomment %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% assign scrTiiger = section.settings.sections_animations %}
<div class="platz-info-list-area {{ section.settings.color_scheme }} ">
  <div class="page-width section-{{ section.id }}-padding ">
    <scr-animate class="scroll-animate-area">
      <div class="platz-info-list">
        {% content_for 'blocks' %}
      </div>
    </scr-animate>
  </div>
</div>

{% schema %}
{
  "name": "Impact list", //ridcoder
  "blocks": [{ "type": "@app" }, { "type": "_info-list" }],
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme_1",
      "label": "Color Scheme" // ridcoder,
    },
    {
      "type": "select",
      "id": "sections_animations",
      "options": [
        {
          "value": "none",
          "label": "None" // ridcoder
        },
        {
          "value": "have",
          "label": "Ambient" // ridcoder
        }
      ],
      "default": "none",
      "label": "Animation", // ridcoder,
      "info": "Animation: Activates on load and scroll to animate." // ridcoder,
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 50
    }
  ],
  "presets": [
    {
      "name": "Impact list", //ridcoder
      "blocks": [
        {
          "type": "_info-list"
        },
        {
          "type": "_info-list"
        },
        {
          "type": "_info-list"
        }
      ]
    }
  ]
}
{% endschema %}
